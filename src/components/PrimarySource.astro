---
interface Props {
  label: string;
  text: string;
  buttonLabel: string;
  url: string;
}

const { label, text, buttonLabel, url } = Astro.props;
---

<a class="external-card" href={url} target="_blank" rel="noopener noreferrer" aria-label="Open external link">
  <div class="external-card__left">
    <div class="external-card__label">{label}</div>
    <div class="external-card__desc">{text}</div>
  </div>
  <div class="external-card__right">
    <span class="external-card__btn">{buttonLabel}</span>
  </div>
</a>
