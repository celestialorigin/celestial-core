---
import Layout from "../layouts/Layout.astro";
import { getNavTiles } from "../data/navTiles";

const BASE = (import.meta.env.BASE_URL || "/").replace(/\/?$/, "/");
const tiles = getNavTiles(BASE);
---

<Layout showStars={true} starPattern="mid" bodyClass="page-creations" title="CREATIONS">
  <section class="creations">
    <header class="creations-head">
      <h1>CREATIONS / 展示室</h1>
      <p class="lead">
        Lukia（Human）× Lucia（AI）がAIと共に制作した、画像・映像・BGM・VRワールド・アバター等をまとめて観測できます。
        <br />完成品だけでなく、制作の痕跡や実験ログも含めて展示します。
      </p>
    </header>

    <div class="grid hero-grid">
      {tiles.map((tile) => (
        <a class={"hero-card " + tile.class} href={tile.href}>
          <span class="card-icon">{tile.icon}</span>
          <span class="card-title">{tile.label}</span>
          <span class="card-desc">{tile.desc}</span>
        </a>
      ))}
    </div>

    <div class="back-home-link">
      <a href={BASE}>← HOMEへ戻る</a>
    </div>
  </section>
</Layout>

<style>
  .creations{
    width: min(1000px, 92vw);
    margin: 28px auto;
    padding: 22px;
  }

  .creations-head h1{
    margin: 0 0 10px;
    letter-spacing: .12em;
  }

  .lead{
    margin: 0;
    opacity: .9;
    line-height: 1.9;
    max-width: 900px;
  }

  /* Shared Card Styles from home.css */
  .hero-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    margin-top: 18px;
  }

  .hero-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    height: 100%;
    min-height: 160px;
    position: relative;
    overflow: hidden;
  }

  .hero-card:hover {
    background: rgba(0, 255, 255, 0.05);
    border-color: rgba(0, 255, 255, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 4px 20px rgba(0, 255, 255, 0.1);
  }

  /* Card ID Colors (from home.css) */
  .card-audio:hover { border-color: rgba(255, 100, 255, 0.5); box-shadow: 0 4px 20px rgba(255, 100, 255, 0.15); }
  .card-img:hover { border-color: rgba(0, 255, 255, 0.5); box-shadow: 0 4px 20px rgba(0, 255, 255, 0.15); }
  .card-dialogues:hover { border-color: rgba(100, 255, 100, 0.5); box-shadow: 0 4px 20px rgba(100, 255, 100, 0.15); }
  .card-novels:hover { border-color: rgba(255, 255, 100, 0.5); box-shadow: 0 4px 20px rgba(255, 255, 100, 0.15); }
  .card-game:hover { border-color: rgba(255, 100, 100, 0.5); box-shadow: 0 4px 20px rgba(255, 100, 100, 0.15); }
  .card-vr:hover { border-color: rgba(180, 100, 255, 0.5); box-shadow: 0 4px 20px rgba(180, 100, 255, 0.15); }

  .card-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.5rem;
    letter-spacing: 0.05em;
  }

  .card-desc {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .hero-grid {
      grid-template-columns: 1fr;
    }
  }

  .back-home-link {
    margin-top: 4rem;
    text-align: center;
  }

  .back-home-link a {
    opacity: 0.8;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
    transition: all 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 4px;
  }
  .back-home-link a:hover {
    opacity: 1;
    color: var(--c-accent);
    background: rgba(255, 255, 255, 0.05);
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
  }
</style>
