<style>
  .contact-card {
    display: block;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    text-decoration: none;
    color: var(--c-text);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .contact-card:hover {
    background: rgba(0, 255, 255, 0.05);
    border-color: var(--c-accent);
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .card-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .card-label {
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--c-accent);
    letter-spacing: 0.05em;
  }

  .card-arrow {
    font-size: 1.2rem;
    opacity: 0.5;
    transition: transform 0.3s ease;
  }

  .contact-card:hover .card-arrow {
    opacity: 1;
    transform: translateX(5px) rotate(-45deg); /* For arrow */
  }
  
  /* Adjust mail/goggle icon rotation */
  .contact-card[href^="mailto"] .card-arrow,
  .contact-card:nth-child(2) .card-arrow { /* Select VRChat by order if generic href */
      transform: none;
  }
  .contact-card[href^="mailto"]:hover .card-arrow,
  .contact-card:nth-child(2):hover .card-arrow {
      transform: scale(1.1);
  }

  /* Reset rotation for the generic â†— arrow if needed, but it's handled by hover rule above */

  .card-desc {
    margin: 0;
    opacity: 0.7;
    font-size: 0.9em;
    font-family: monospace;
    word-break: break-all; /* Ensure long email wraps */
    line-height: 1.5;
  }

  /* OTHER PROFILES */
  .other-profiles {
    margin-top: 80px;
    padding-top: 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .other-title {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0.5rem;
    letter-spacing: 0.1em;
  }

  .other-subtitle {
    font-size: 0.9em;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 30px;
    font-family: monospace;
  }

  .other-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 16px;
  }

  .other-card {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 16px 20px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 6px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .other-card:hover {
    background: rgba(0, 255, 255, 0.04);
    border-color: rgba(0, 255, 255, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 0 10px rgba(0, 255, 255, 0.05); /* Glow effect */
  }

  .other-icon {
    font-size: 1.5rem;
    display: block;
    line-height: 1;
    opacity: 0.8;
  }

  .other-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    flex-grow: 1;
  }

  .other-name {
    font-weight: bold;
    font-size: 0.95rem;
    color: var(--c-accent);
  }

  .other-desc {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
    font-family: monospace;
  }

  .other-arrow {
    font-size: 1rem;
    opacity: 0.3;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .other-card:hover .other-arrow {
    opacity: 1;
    color: var(--c-accent);
    transform: translateX(3px) translateY(-3px);
  }

  @media (max-width: 600px) {
    .other-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
