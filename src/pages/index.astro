  <script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // ===== Elements =====
    const trigger = document.getElementById('core-c-trigger');
    const toast = document.getElementById('sonic-trace-toast');
    const toastTitle = document.getElementById('sonic-trace-title');
    const toastText = document.getElementById('sonic-trace-text');
    const toastClose = document.getElementById('sonic-trace-close');

    const obsHotspot = document.getElementById('obs-hotspot');
    const obsToast = document.getElementById('obs-toast');
    const obsTitle = document.getElementById('obs-title');
    const obsText = document.getElementById('obs-text');
    const obsClose = document.getElementById('obs-close');

    // ===== Audio =====
    const TRACK_LABEL = "C of Observers";
    const TRACK_PATH  = "/audio/c-of-observers.wav";
    let audio = null;
    let isPlaying = false;
    let stopTimer = null;

    function ensureAudio() {
      if (!audio) {
        audio = new Audio(TRACK_PATH);
        audio.loop = true;
        audio.preload = "auto";
      }
    }

    // ===== Toast helpers =====
    function showSonicToast(title, text, persist) {
      if (!toast) return;
      if (toastTitle) toastTitle.textContent = title;
      if (toastText) toastText.textContent = text;

      toast.classList.add('is-visible');

      // persist = true のときは消さない
      if (!persist) {
        if (stopTimer) clearTimeout(stopTimer);
        stopTimer = setTimeout(() => {
          toast.classList.remove('is-visible');
        }, 2000);
      } else {
        if (stopTimer) clearTimeout(stopTimer);
        stopTimer = null;
      }
    }

    function hideSonicToast() {
      if (!toast) return;
      toast.classList.remove('is-visible');
      if (stopTimer) clearTimeout(stopTimer);
      stopTimer = null;
    }

    function showObsToast(title, text) {
      if (!obsToast) return;
      if (obsTitle) obsTitle.textContent = title;
      if (obsText) obsText.textContent = text;
      obsToast.classList.add('is-visible');
      // 3秒後に自動で薄く消える（好みで調整OK）
      setTimeout(() => obsToast.classList.remove('is-visible'), 3000);
    }

    // Close buttons
    if (toastClose) toastClose.addEventListener('click', hideSonicToast);
    if (obsClose) obsClose.addEventListener('click', () => obsToast && obsToast.classList.remove('is-visible'));

    // ===== Core "C" interaction =====
    function updateTriggerA11y() {
      if (!trigger) return;
      trigger.setAttribute('aria-pressed', String(isPlaying));
    }

    async function toggleAudio() {
      if (!trigger) return;
      ensureAudio();

      try {
        if (!isPlaying) {
          await audio.play();
          isPlaying = true;
          updateTriggerA11y();
          showSonicToast(
            "SIGNAL LOCKED // NOW PLAYING",
            `${TRACK_LABEL}  ::  ${TRACK_PATH}`,
            true
          );
        } else {
          audio.pause();
          isPlaying = false;
          updateTriggerA11y();
          showSonicToast(
            "SIGNAL TERMINATED",
            "Connection lost. Returning to silence...",
            false
          );
        }
      } catch (e) {
        // Autoplay制限など
        isPlaying = false;
        updateTriggerA11y();
        showSonicToast(
          "ERROR // PLAYBACK BLOCKED",
          "User interaction required or unsupported audio format.",
          false
        );
        console.error(e);
      }
    }

    if (trigger) {
      trigger.addEventListener('click', toggleAudio);
      trigger.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          toggleAudio();
        }
      });
    }

    // ===== Observation hotspot =====
    if (obsHotspot) {
      obsHotspot.addEventListener('click', () => {
        // 以前の「観測数」実装がlocalStorage等ならここで拾う
        const count = Number(localStorage.getItem('celestial_observation_count') || "0");
        showObsToast(
          "OBSERVATION COUNT",
          `You have observed ${count} time(s). // Keep watching.`
        );
      });
    }

    // ===== Project C Trigger (Secret Route) =====
    const projectCTrigger = document.getElementById('project-c-trigger');
    if (projectCTrigger) {
      const goToSecret = () => {
        window.location.href = "/c-of-observers";
      };
      projectCTrigger.addEventListener('click', goToSecret);
      projectCTrigger.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          goToSecret();
        }
      });
    }
  });
  </script>

