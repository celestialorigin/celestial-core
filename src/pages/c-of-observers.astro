---
import Layout from '../layouts/Layout.astro';
import LogHeader from '../components/LogHeader.astro';
import LogList from '../components/LogList.astro';
import DimensionalRift from '../components/DimensionalRift.astro';
import { logs } from '../data/logs';

const categoryId = "C OF OBSERVER";
const internalId = "OBS-OBSR-001";
---

<Layout title={`${categoryId} | CELESTIAL`} bodyClass="page-c-of-observers">
  <div slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </div>

  <article class="category-page container fade-in-section">
    <div class="glass-panel main-content">
      <LogHeader 
        displayId={categoryId}
        internalId={internalId}
        type="CORE_NODE"
        status="SILENT"
      />
      
      <div class="category-body">
        <div class="role-declaration">
          <p class="role-text">
            TYPE: CORE OBSERVATION NODE<br>
            ROLE: Internal entity / hidden observation point<br>
            NOTE: This page is not an AUDIO hub.<br>
            <span class="faint-note">Deep observation trace detected.</span>
          </p>
        </div>

        <div class="intro-area">
          <p class="intro-text">
            観測者ログ。<br>
            名前のない、個人の記憶。<br>
            かつて存在した、たったひとつの視点の記録。<br>
            <span class="faint-note">……微かな温かさを感じる。</span>
          </p>
        </div>

        <div class="logs-section">
          <h2 class="section-title">ENTITY OBSERVED DATA</h2>
          <LogList logs={logs} filterCategory="observers" />
        </div>
        
        <div class="stardust-layer"></div>
      </div>

      <div class="footer-nav">
        <a class="analyze-footer-link" href="/" aria-label="Return to Observation Base">
          ← 観測拠点に戻る
        </a>
      </div>
    </div>
  </article>
  
  <DimensionalRift position="right" href="/rift" variant="past" />
</Layout>

<style>
  /* Quiet / Soft Atmosphere Override */
  .category-page {
    max-width: 900px;
    margin: 4rem auto;
    padding: 0 20px;
    position: relative;
    z-index: 10;
  }

  .main-content {
    background: rgba(255, 255, 255, 0.025); /* Slightly lighter/warmer than usual */
    border: 1px solid rgba(220, 240, 255, 0.08); /* Soft pale border */
    box-shadow: 0 0 30px rgba(220, 240, 255, 0.03); /* Very gentle glow */
    backdrop-filter: blur(12px);
    border-radius: 16px; /* Softer corners */
    padding: 3rem;
    position: relative;
    overflow: hidden;
  }

  /* Soft Background Glow */
  .main-content::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at 50% 50%, rgba(200, 230, 255, 0.04) 0%, transparent 60%);
    pointer-events: none;
    z-index: -1;
  }

  .role-declaration {
    margin-bottom: 2rem;
    padding: 1rem;
    border-left: 2px solid rgba(255, 255, 255, 0.15);
    background: rgba(0, 0, 0, 0.2);
  }

  .role-text {
    font-family: monospace;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.6;
  }

  .intro-text {
    opacity: 0.75;
    font-size: 0.95rem;
    line-height: 1.8;
    color: rgba(235, 240, 255, 0.9);
    margin-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    padding-bottom: 2rem;
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.1);
  }

  .faint-note {
    display: block;
    margin-top: 0.8rem;
    font-size: 0.8rem;
    opacity: 0.5;
    font-style: italic;
    color: rgba(200, 255, 255, 0.6);
  }

  .logs-section {
    margin-top: 4rem;
  }
  
  .section-title {
    font-size: 0.85rem;
    letter-spacing: 0.25em;
    color: rgba(255, 255, 255, 0.3);
    margin-bottom: 2.5rem;
    font-weight: 400;
    text-align: center;
  }

  /* Stardust Effect - Very subtle noise/specks */
  .stardust-layer {
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0.4;
    background-image: 
      radial-gradient(1px 1px at 10% 20%, white, transparent),
      radial-gradient(1px 1px at 30% 60%, white, transparent),
      radial-gradient(1px 1px at 70% 40%, white, transparent),
      radial-gradient(1.5px 1.5px at 90% 80%, rgba(200, 240, 255, 0.8), transparent);
    background-size: 400px 400px;
    animation: stardust-drift 60s linear infinite;
    mix-blend-mode: screen;
  }

  @keyframes stardust-drift {
    from { background-position: 0 0; }
    to { background-position: 0 -400px; }
  }

  .footer-nav {
    margin-top: 5rem;
    text-align: center;
  }
  
  .back-link {
    opacity: 0.4;
    text-decoration: none;
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.6);
    transition: all 0.4s ease;
  }
  .back-link:hover {
    opacity: 0.9;
    color: rgba(220, 240, 255, 1);
    text-shadow: 0 0 10px rgba(220, 240, 255, 0.4);
  }

  /* Soften global accent overrides for this page */
  :global(.page-c-of-observers .log-item) {
    border-color: rgba(255, 255, 255, 0.05) !important;
    background: rgba(255, 255, 255, 0.01) !important;
  }
  :global(.page-c-of-observers .log-item:hover) {
    background: rgba(220, 240, 255, 0.04) !important;
    border-color: rgba(220, 240, 255, 0.15) !important;
    box-shadow: 0 0 15px rgba(220, 240, 255, 0.05) !important;
  }

  /* C Trace System (Page Specific) */
  :global(.page-c-of-observers .log-badge) { display: none !important; }
  :global(.page-c-of-observers .c-trace) {
    display: inline-block !important;
    color: transparent; /* Text hidden by default */
    font-size: 0.7rem;
    font-weight: bold;
    text-shadow: 0 0 4px rgba(200, 240, 255, 0.8), 0 0 2px rgba(255, 255, 255, 0.9); /* Star dot */
    transition: all 0.4s ease;
    margin-left: 2px;
  }
  :global(.page-c-of-observers .log-card:hover .c-trace) {
    color: rgba(200, 240, 255, 0.6); /* Reveal "C" */
    text-shadow: 0 0 12px rgba(200, 240, 255, 0.4);
    opacity: 0.8;
  }

  /* Mute the date/title slightly */
  :global(.page-c-of-observers .log-date) { opacity: 0.5 !important; }
  :global(.page-c-of-observers .log-title) { color: rgba(240, 245, 255, 0.9) !important; }

  /* Analyze Data Link Micro-interaction */
  /* Analyze Footer Link - Replaces analyze-link */
  .analyze-footer-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-top: 18px;
    color: rgba(170, 220, 255, 0.70);
    font-size: 12px;
    letter-spacing: 0.22em;
    text-decoration: none;
    opacity: 0.55;
    transition: all 0.35s ease;
    position: relative;
  }

  .analyze-footer-link::before {
    content:"";
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: rgba(120,200,255,0.35);
    box-shadow: 0 0 10px rgba(120,200,255,0.35);
  }

  .analyze-footer-link:hover {
    opacity: 1;
    color: #c8f4ff;
    text-shadow: 0 0 10px rgba(140,220,255,0.55);
  }

  .analyze-footer-link:hover::before {
    background: #c8f4ff;
    box-shadow: 0 0 6px rgba(160,230,255,0.8),
                0 0 14px rgba(120,200,255,0.6);
  }
</style>
