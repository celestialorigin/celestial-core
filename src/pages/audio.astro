  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const trackCards = Array.from(document.querySelectorAll("[data-track]"));
      
      // -- GLOBAL AUDIO STATE --
      // Default: 70% volume, not muted
      let globalVol = parseFloat(localStorage.getItem("celestial_audio_volume") || "0.7");
      let globalMuted = localStorage.getItem("celestial_audio_muted") === "true";

      // Helper: Save state
      const saveState = () => {
        localStorage.setItem("celestial_audio_volume", globalVol);
        localStorage.setItem("celestial_audio_muted", globalMuted);
      };

      // Helper: Format time
      function fmtTime(s) {
        if (!s || isNaN(s)) return "0:00";
        const m = Math.floor(s / 60);
        const sec = Math.floor(s % 60);
        return `${m}:${String(sec).padStart(2, "0")}`;
      }

      function stopAll(exceptAudio) {
        trackCards.forEach(card => {
          const audio = card.querySelector("audio");
          if (audio && audio !== exceptAudio) {
            audio.pause();
            audio.currentTime = 0; 
            card.classList.remove("playing");
          }
        });
      }

      // Apply global volume to ALL tracks (UI + Audio)
      function syncVolumeUI() {
        trackCards.forEach(card => {
          const audio = card.querySelector("audio");
          const volSlider = card.querySelector(".vol-slider");
          const muteBtn = card.querySelector('[data-action="mute"]');
          
          if (!audio) return;

          // Apply to Audio Element
          audio.volume = globalVol;
          audio.muted = globalMuted;

          // Apply to UI
          if (volSlider) {
             volSlider.value = globalVol;
             // Visual quirk: when muted, maybe dim slider? 
             // We'll handle visual dimming via CSS based on parent class or attribute later if needed.
             // But for logical value, it remains the "unmuted target volume".
             if (globalMuted) volSlider.classList.add("muted-state");
             else volSlider.classList.remove("muted-state");
          }

          if (muteBtn) {
            muteBtn.setAttribute("aria-pressed", String(globalMuted));
          }
        });
      }

      // Initial Sync
      syncVolumeUI();

      trackCards.forEach(card => {
        const audio = card.querySelector("audio");
        const playBtn = card.querySelector('[data-action="toggle"]');
        const loopBtn = card.querySelector('[data-action="loop"]');
        const seekBar = card.querySelector('.seek-bar');
        const timeDisplay = card.querySelector('.time-display');
        const progressFill = card.querySelector('.seek-progress-fill');
        
        // Volume Controls
        const volSlider = card.querySelector(".vol-slider");
        const muteBtn = card.querySelector('[data-action="mute"]');

        if (!audio) return;

        // Init UI
        timeDisplay.textContent = "0:00 / 0:00";

        // --- PLAYBACK ---
        playBtn.addEventListener("click", () => {
          if (audio.paused) {
            stopAll(audio);
            // Re-apply volume just in case
            audio.volume = globalVol;
            audio.muted = globalMuted;
            
            audio.play().then(() => {
              card.classList.add("playing");
            }).catch(e => console.error(e));
          } else {
            audio.pause();
            card.classList.remove("playing");
          }
        });

        loopBtn.addEventListener("click", () => {
          audio.loop = !audio.loop;
          loopBtn.setAttribute("aria-pressed", String(audio.loop));
        });

        // --- VOLUME ---
        volSlider.addEventListener("input", (e) => {
          const val = parseFloat(e.target.value);
          globalVol = val;
          if (val > 0 && globalMuted) {
             // Dragging slider unmutes automatically
             globalMuted = false;
          }
          saveState();
          syncVolumeUI();
        });

        muteBtn.addEventListener("click", () => {
          globalMuted = !globalMuted;
          saveState();
          syncVolumeUI();
        });

        // --- SEEK / PROGRESS ---
        let isSeeking = false;
        seekBar.disabled = true; // Disable until ready

        const updateSeekMax = () => {
          const dur = audio.duration;
          if (dur && !isNaN(dur) && dur !== Infinity) {
             seekBar.max = dur;
             timeDisplay.textContent = `${fmtTime(audio.currentTime)} / ${fmtTime(dur)}`;
          }
        };

        const enableSeek = () => {
          // readyState >= 2 (HAVE_CURRENT_DATA) or better
          if (audio.readyState >= 1) { // loadedmetadata gives duration, good enough to set max
             updateSeekMax();
          }
          if (audio.readyState >= 2) {
             seekBar.disabled = false;
          }
        };

        // Metadata loaded: set basic duration
        audio.addEventListener("loadedmetadata", () => {
           updateSeekMax();
           enableSeek();
        });
        
        // VBR fix: duration might change later
        audio.addEventListener("durationchange", updateSeekMax);

        // Events that might indicate readiness
        audio.addEventListener("canplay", enableSeek);
        audio.addEventListener("loadeddata", enableSeek);

        audio.addEventListener("timeupdate", () => {
          // Only update slider if user is NOT dragging it
          if (!isSeeking) {
             seekBar.value = audio.currentTime;
             const dur = audio.duration || 0;
             const percent = (dur > 0) ? (audio.currentTime / dur) * 100 : 0;
             if (progressFill) progressFill.style.width = `${percent}%`;
          }
          // Always update time text
          timeDisplay.textContent = `${fmtTime(audio.currentTime)} / ${fmtTime(audio.duration)}`;
        });

        audio.addEventListener("ended", () => {
          card.classList.remove("playing");
          audio.currentTime = 0;
          if (progressFill) progressFill.style.width = "0%";
        });

        // Seeking Logic (Pointer Events for robust drag detection)
        const onSeekInput = (val) => {
           const dur = audio.duration || 1; 
           // Calculate percent based on current value (seconds) vs duration
           const percent = (val / dur) * 100;
           if (progressFill) progressFill.style.width = `${percent}%`;
           timeDisplay.textContent = `${fmtTime(val)} / ${fmtTime(dur)}`;
        };

        // Start seeking
        const startSeek = () => {
          if (seekBar.disabled) return;
          isSeeking = true;
          seekBar.classList.add("seeking");
        };

        // End seeking (commit change)
        const endSeek = () => {
          if (isSeeking) {
            const targetTime = parseFloat(seekBar.value);
            
            // Prefer fastSeek if available
            if (Number.isFinite(targetTime)) {
              if ('fastSeek' in audio) {
                audio.fastSeek(targetTime);
              } else {
                audio.currentTime = targetTime;
              }
            }
            
            isSeeking = false;
            seekBar.classList.remove("seeking");
          }
        };

        // Mouse/Touch Down -> Start
        seekBar.addEventListener("mousedown", startSeek);
        seekBar.addEventListener("touchstart", startSeek, { passive: true });

        // Input -> Update visual (while dragging)
        seekBar.addEventListener("input", (e) => onSeekInput(e.target.value));
        
        // Change -> Commit (sometimes fires on drop)
        seekBar.addEventListener("change", (e) => {
           // We handle commit in endSeek via pointerup/touchend, 
           // but 'change' can also fire. To allow keyboard usage etc, we can trigger sync here too if not dragging?
           // Actually, 'change' alone is often enough for click-jumps. 
           // But fastSeek logic inside endSeek better handles dragging release.
           // Let's ensure simple "click on bar" also updates:
           if (!isSeeking) {
              const targetTime = parseFloat(e.target.value);
              if ('fastSeek' in audio) audio.fastSeek(targetTime);
              else audio.currentTime = targetTime;
           }
        });
        
        // Mouse/Touch Up -> End
        seekBar.addEventListener("mouseup", endSeek);
        seekBar.addEventListener("touchend", endSeek);

        // Safety: if mouse leaves element while dragging? 
        seekBar.addEventListener("mouseleave", () => {
           // Optional: commit if they leave? Or just let them drag outside like standard range?
           // Standard range allows dragging outside. We do nothing here.
        });
    });
    
  });  
  </script>

